<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.CarDetailFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageDetail"
        android:layout_width="0dp"
        android:layout_height="300dp"
        tools:background="@color/teal_200"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/brandDetail"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/closeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_close_24"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/brandDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:text="Marca"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/imageDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/performanceDetail"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/modelDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:text="Modelo"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/imageDetail"
        app:layout_constraintStart_toEndOf="@id/brandDetail"
        app:layout_constraintBottom_toBottomOf="@id/brandDetail"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/performanceDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:text="Prestaciones"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/brandDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/descriptionDetail"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/descriptionDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:text="@string/loremipsum"
        app:layout_constraintTop_toBottomOf="@id/performanceDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>